
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Light Theme Profile &amp; Stats Dashboard</title>
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&amp;display=swap" rel="stylesheet" />
    <script id="tailwind-config">
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        "primary": "#7c3aed",
                        "primary-hover": "#6d28d9",
                        "background-main": "#f8fafc",
                        "heading-dark": "#1e293b",
                        "text-secondary": "#64748b",
                    },
                    fontFamily: {
                        "display": ["Inter", "sans-serif"]
                    },
                    borderRadius: {
                        "DEFAULT": "0.25rem",
                        "lg": "0.5rem",
                        "xl": "0.75rem",
                        "full": "9999px"
                    },
                    boxShadow: {
                        'soft': '0 4px 20px -2px rgba(0, 0, 0, 0.05)',
                    }
                },
            },
        }
    </script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .material-symbols-outlined {
            font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
        }
    </style>
</head>
<body class="bg-background-main text-heading-dark min-h-screen">
    <div class="max-w-[1200px] mx-auto px-4 py-12 lg:px-8">
        <div class="bg-white rounded-xl shadow-soft border border-slate-100 p-8 mb-10">
            <div class="flex flex-col md:flex-row items-center justify-between gap-6">
                <div class="flex flex-col md:flex-row items-center gap-6 text-center md:text-left">
                    <div class="relative">
                        <div class="h-28 w-28 rounded-full overflow-hidden border-4 border-white shadow-md bg-slate-100">
                            <img src="/images/@ViewBag.image" class="user-img" alt="user avatar">
                        </div>
                        <div class="absolute bottom-1 right-1 h-6 w-6 bg-green-500 border-4 border-white rounded-full"></div>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold tracking-tight text-heading-dark">@ViewBag.user</h1>
                        <p class="text-text-secondary text-lg flex items-center justify-center md:justify-start gap-2 mt-1">
                            <span class="material-symbols-outlined text-base">mail</span>
                            @ViewBag.mail
                        </p>
                        <div class="mt-3 flex flex-wrap gap-2 justify-center md:justify-start">
                            <span class="px-3 py-1 bg-primary/10 text-primary text-xs font-semibold rounded-full uppercase tracking-wider">@ViewBag.username</span>
                            <span class="px-3 py-1 bg-slate-100 text-text-secondary text-xs font-semibold rounded-full uppercase tracking-wider">@ViewBag.confirmed</span>
                        </div>
                    </div>
                </div>
                <div class="w-full md:w-auto">
                    <a href="/Profile/Index/">
                        <button class="w-full md:w-auto flex items-center justify-center gap-2 bg-primary hover:bg-primary-hover text-white font-bold py-3 px-8 rounded-lg transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined text-lg">edit</span>
                            Profili Düzenle
                        </button>
                    </a>
                    <br /><br />
                    <a href="/Mailbox/Index/">
                        <button class="w-full md:w-auto flex items-center justify-center gap-2 bg-primary hover:bg-primary-hover text-white font-bold py-3 px-8 rounded-lg transition-all shadow-lg shadow-primary/20">
                            <span class="material-symbols-outlined text-lg">arrow_back</span>
                            Mesajlara Dön
                        </button>
                    </a>
                </div>
            </div>
        </div>
        <div class="mb-6">
            <h2 class="text-xl font-bold text-heading-dark flex items-center gap-2">
                <span class="material-symbols-outlined text-primary">analytics</span>
                Mesaj İstatistikleri
            </h2>
            <p class="text-text-secondary text-sm">Tüm mesaj verileri aşağıda verilmiştir!</p>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">send</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.mesaj</span>
                    <span class="text-text-secondary font-medium mt-1">Toplam Mesaj</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">mark_email_unread</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.okunmamış</span>
                    <span class="text-text-secondary font-medium mt-1">Okunmayan Mesaj</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">drafts</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.okunmuş</span>
                    <span class="text-text-secondary font-medium mt-1">Okunan Mesaj</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">edit_note</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.taslak</span>
                    <span class="text-text-secondary font-medium mt-1">Taslaklar</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">schedule_send</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.gönderilenmesaj</span>
                    <span class="text-text-secondary font-medium mt-1">Gönderilen Mesaj</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">stars</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.yıldızlı</span>
                    <span class="text-text-secondary font-medium mt-1">Yıldızlı Mesajlar</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">delete</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.çöp</span>
                    <span class="text-text-secondary font-medium mt-1">Çöp Kutusu</span>
                </div>
            </div>
            <div class="group bg-white rounded-xl p-6 border border-slate-100 shadow-soft hover:shadow-md hover:border-primary/30 transition-all">
                <div class="flex justify-between items-start mb-4">
                    <div class="p-2 bg-primary/10 text-primary rounded-lg">
                        <span class="material-symbols-outlined">archive</span>
                    </div>
                </div>
                <div class="flex flex-col">
                    <span class="text-3xl font-bold text-heading-dark">@ViewBag.bugüngelenmesaj</span>
                    <span class="text-text-secondary font-medium mt-1">Bugün Gelen Mesajlar</span>
                </div>
            </div>
        </div>
    </div>

</body>
</html>