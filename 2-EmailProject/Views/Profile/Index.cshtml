@model UserEditDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profilimi Düzenle | berkearslanl</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        body {
            background-color: #f0f2f5;
            font-family: 'Inter', sans-serif;
        }

        .profile-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.05);
            overflow: hidden;
        }

        .profile-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            height: 120px;
            position: relative;
        }

        .avatar-wrapper {
            position: relative;
            width: 130px;
            height: 130px;
            margin: -65px auto 20px;
        }

        .avatar-preview {
            width: 100%;
            height: 100%;
            border-radius: 50%;
            border: 5px solid white;
            object-fit: cover;
            background: #fff;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .form-label {
            font-weight: 600;
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 8px;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            border: 1px solid #e0e0e0;
            transition: 0.3s;
        }

            .form-control:focus {
                box-shadow: 0 0 0 3px rgba(118, 75, 162, 0.1);
                border-color: #764ba2;
            }

        .btn-save {
            background: #764ba2;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
            color: white;
            transition: 0.3s;
        }

            .btn-save:hover {
                background: #667eea;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(118, 75, 162, 0.3);
            }

        .input-group-text {
            background: transparent;
            border-radius: 10px 0 0 10px;
            border-right: none;
            color: #764ba2;
        }

        .form-control.with-icon {
            border-left: none;
        }
    </style>
</head>
<body>

    <div class="container mt-5 mb-5">
        <div class="row justify-content-center">
            <div class="col-lg-7">
                <div class="profile-card">
                    <div class="profile-header text-center pt-4">
                        <h4 class="text-white fw-bold">Profil Ayarları</h4>
                    </div>
                    @*https://ui-avatars.com/api/?name=@Model.Name+@Model.Surname&background=random&size=128*@
                    <div class="avatar-wrapper">
                        <img src="/images/@Model.ImageUrl" alt="Profil Fotoğrafı" class="avatar-preview" id="profileImage">
                    </div>

                    <div class="card-body p-4 p-md-5 pt-0">
                        <div class="text-center mb-4">
                            <h5 class="fw-bold mb-0">@Model.Name @Model.Surname</h5>
                            <p class="text-muted small">@Model.Email</p>
                        </div>

                        <form method="post" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Adınız</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                        <input type="text" asp-for="Name" class="form-control with-icon" placeholder="Adınız" />
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Soyadınız</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-signature"></i></span>
                                        <input type="text" asp-for="Surname" class="form-control with-icon" placeholder="Soyadınız" />
                                    </div>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">E-posta Adresi</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-envelope"></i></span>
                                        <input type="email" asp-for="Email" class="form-control with-icon" placeholder="Email Adresiniz" />
                                    </div>
                                </div>

                                <div class="col-md-12 mb-3">
                                    <label class="form-label">Profil Fotoğrafı Güncelle</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-image"></i></span>
                                        <input type="file" asp-for="Image" class="form-control with-icon" accept="image/*" />
                                    </div>
                                    <small class="text-muted mt-1 d-block"><i class="fa-solid fa-circle-info me-1"></i> Yeni bir görsel seçtiğinizde profil fotoğrafınız güncellenecektir.</small>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label class="form-label">Yeni Şifre (Boş bırakılabilir)</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fa-solid fa-lock"></i></span>
                                        <input type="password" asp-for="Password" class="form-control with-icon" placeholder="Şifreniz" />
                                    </div>
                                </div>

                                <div class="col-md-12 d-grid">
                                    <button type="submit" class="btn btn-save">
                                        <i class="fa-solid fa-check-circle me-2"></i>Değişiklikleri Kaydet
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="text-center mt-4">
                            <a href="/Mailbox/Index/" class="text-decoration-none text-muted small">
                                <i class="fa-solid fa-arrow-left me-1"></i> Gelen Kutusuna Git
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>




